
@{
    ViewData["Title"] = "RegisterUser";
    @model RegisterUserViewModel;
}
    


    <h2>RegisterUser</h2>
<div
    class="row">
    <div class="col-md-4">
        <form id="newsForm" asp-action="RegisterUser" method="post" asp-antiforgery="true">

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="@Model.User.Name">Имя</label>
                        <input type="text" class="form-control border-input" asp-for="@Model.User.Name" data-val="true" data-val-required="Не указано имя" />
                        <span class="field-validation-valid" data-valmsg-for="@Model.User.Name" data-valmsg-replace="true"></span>
                    </div>

                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="@Model.User.LastName">Фамилия</label>
                        <input type="text" class="form-control border-input" asp-for="@Model.User.LastName" data-val="true" data-val-required="Не указана фамилия" />
                        <span class="field-validation-valid" data-valmsg-for="@Model.User.LastName" data-valmsg-replace="true"></span>
                    </div>

                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="@Model.User.Email">Почта</label>
                        <input type="text" class="form-control border-input" asp-for="@Model.User.Email" data-val="true" data-val-required="Не указана почта" />
                        <span class="field-validation-valid" data-valmsg-for="@Model.User.Email" data-valmsg-replace="true"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="@Model.User.Password">Пароль</label>
                        <input type="text" class="form-control border-input" asp-for="@Model.User.Password" data-val="true" data-val-required="Не указан пароль" />
                        <span class="field-validation-valid" data-valmsg-for="@Model.User.Password" data-valmsg-replace="true"></span>
                    </div>
                </div>
            </div>

            @Html.ListBoxFor(x => x.SelectedRoles, new MultiSelectList(@Model.Roles, "Id", "Name"))

            <div class="footer">
                <div class="row">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-info btn-fill btn-wd">Сохранить</button>
                        <a href="@Url.Action("Index")" class="btn btn-wd">Отмена</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

